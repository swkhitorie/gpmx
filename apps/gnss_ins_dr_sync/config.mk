# board bsp config
include ${SDK_ROOTDIR}/boards/stm32/stm32f407_ebf_bth/make.mk

# os and library config
MK_COMPILER=gcc
MK_RTOS=none
MK_MEM_METHOD=4
MK_USE_POSIX=n
MK_USE_LIB_CPP=n

MK_USE_FS_FATFS=n
MK_USE_CRUSB=n
MK_USE_CRUSB_CDC=n
MK_CRUSB_IP=none

MK_USE_PX4_HRT=y
MK_USE_PX4_COMPONENT=n
MK_USE_PX4_UORB=n
MK_USE_PX4_WORKQUEUE=n

MK_USE_NET_LWIP_CORE=y
